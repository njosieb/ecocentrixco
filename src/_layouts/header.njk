{% block config %}
  {% set baseUrl = config.baseUrl or './' %}
{% endblock %}

<header>
  <div class="site-header db bg-white">
    <div class="header-wrapper pt3-ns pb3-ns">
      <a href="<$ baseUrl $>" class="db ml4-ns">
        <img src="<$ baseUrl $>/images/logo.png" class="ph3 pv2"/>
        {# <h4 class="ma0 white"><em><$ site.data.info.tagline $></em></h4> #}
      </a>
      <div class="menu">
        {% for item in site.data.menu %}
        <div class="menu-item">
          <a title="<$ item.description $>" href="<$ baseUrl $><$ item.route $>" class="underline-hover fw7"><$ item.label $></a>
            {% if item.children %}
            <div class="sub-menu absolute bg-black-60 pa2">
              {% for child in item.children %}
              <a title="<$ child.description $>" href="<$ baseUrl $><$ child.route $>" class="db pv2 white nowrap hover-gold"><$ child.label $></a>
              {% endfor %}
            </div>
            {% endif %}
        </div>
        {% endfor %}
      </div>
      <div id="menu-reveal" class="menu-button-container right">
        Menu&nbsp;<i class="fa fa-bars"></i>
      </div>
    </div>
  </div>
</header>
